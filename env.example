# Redis configuration
REDIS_URL=redis://localhost:6379
KV_URL=redis://localhost:6379

# Authentication (set to "true" to enable)
REQUIRE_AUTH=true

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Privy Configuration for Wallet Management
PRIVY_APP_ID=your_privy_app_id
PRIVY_APP_SECRET=your_privy_app_secret
PRIVY_WALLET_AUTH_KEY=wallet-auth:your_privy_wallet_auth_key

# Optional: Default private key for transactions
# WARNING: Only for development with test accounts
# PRIVATE_KEY=your_private_key_for_testing 